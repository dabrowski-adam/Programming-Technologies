<Window x:Class="WPFBookstore.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBookstore"
        mc:Ignorable="d"
        Title="Adding Book" MinHeight ="350" MinWidth="400" Height="300" Width="400">


    <Border Padding="10" Background="{DynamicResource {x:Static SystemColors.AppWorkspaceBrushKey}}" Margin="0,0,-0.4,-47.6">
        <StackPanel>
            <!-- Window Title-->
            <TextBlock Text="Adding new book" Margin="0 10" FontFamily="Stencil" />

            <!-- Title -->
            <TextBlock Text="Title" />
            <TextBox x:Name="TitleText" Padding="2" />

            <!-- Author -->
            <TextBlock Text="Author" Margin="0 10 0 0" />
            <TextBox x:Name="AuthorText" Padding="2" />

            <!-- Genre -->
            <TextBlock Text="Genre" Margin="0 10 0 0" />
            <TextBox x:Name="GenreText" Padding="2" />

            <!-- Count -->
            <TextBlock Text="Count" Margin="0 10 0 0" />
            <TextBox x:Name="CountText" Padding="2" />

            <!-- Buttons -->
            <Button x:Name="AddBookButton" Click="AddBookButton_Click" Margin="0 20 200 10" Grid.Column="0" Content="Add Book"/>
            <Button x:Name="CloseButton" Click="CloseButton_Click" Margin="0 0 200 10" Grid.Column="0" Content="Close"/>
        </StackPanel>
    </Border>
</Window>
