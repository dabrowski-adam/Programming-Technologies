<Window x:Class="WPFBookstore.CannotRemoveErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBookstore"
        mc:Ignorable="d"
        Title="Error" MinHeight ="250" MinWidth="420" Height="250" Width="420" MaxHeight="250" MaxWidth="420">


    <Border Padding="10" Background="{DynamicResource {x:Static SystemColors.AppWorkspaceBrushKey}}">
        <StackPanel Margin="0.4,57.4,0.2,-0.4">
            <!-- Message -->
            <TextBlock x:Name="MessageBlock" TextWrapping="Wrap"  FontSize="18px" Text="Error message" HorizontalAlignment="Center" Margin="20 0 20 0" FontFamily="Stencil"/>

            <Grid Margin="0 20 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Button -->
                <Button x:Name="OKButton" Click="OKButton_Click"  Grid.Column="1" Content="OK" />
            </Grid>
        </StackPanel>
    </Border>
</Window>
